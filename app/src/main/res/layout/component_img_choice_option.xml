<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bgd_image_choice"
    android:elevation="5dp"
    android:id="@+id/img_choice_card_view"
    android:padding="3dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_choice_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/answer_template"
        android:id="@+id/img_choice_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/bree_serif"
        android:textSize="14sp"
        android:padding="3dp"
        android:textColor="#9e9e9e"
        android:id="@+id/img_choice_text"/>
</RelativeLayout>