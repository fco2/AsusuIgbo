<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ImgChoiceFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eceff1"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="6dp"
                android:fontFamily="@font/bree_serif"
                android:textSize="20sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"
                android:textColor="#9e9e9e"
                android:id="@+id/img_choice_question_id"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/img_choice_question_id"
                app:layout_constraintBottom_toTopOf="@id/button_id"
                android:padding="5dp"
                android:id="@+id/img_choice_recycler_view_id">
            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="18dp"
                android:textSize="18sp"
                android:enabled="false"
                style="@style/RoundedCornerButtonTheme"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/answer_button_state"
                android:id="@+id/button_id"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
