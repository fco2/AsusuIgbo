<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.asusuigbo.frank.asusuigbo.fragments.ProfileFragment"
    android:animateLayoutChanges="true"
    android:id="@+id/profile_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image_and_name">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/user_profile_bgd"
                android:contentDescription="@string/user_profile_image"
                android:src="@mipmap/user_profile_image"
                android:id="@+id/user_profile_img_view"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="25dp"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/user_profile_img_view"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:fontFamily="@font/andika"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:text="@string/temporary_username"/>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_divider"
        android:layout_below="@id/profile_image_and_name"
        android:layout_margin="6dp"
        android:id="@+id/user_profile_divider"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            android:padding="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/user_profile_divider">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/andika"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="@string/lessons_completed_text"
                    android:id="@+id/lessons_completed_template_text"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@id/lessons_completed_template_text"
                    android:background="@drawable/shape_divider"
                    android:id="@+id/divider_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/andika"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="@string/ten"
                    android:layout_toEndOf="@id/divider_2"
                    android:id="@+id/lessons_completed_value"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

</RelativeLayout>
