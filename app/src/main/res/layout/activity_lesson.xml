<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lessons_layout_id"
    tools:context=".LessonActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="textStart"
        android:text="@string/select_answer_header"
        android:textSize="24sp"
        android:textColor="#66655c"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lesson_activity_text_id"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lesson_activity_text_id"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textColor="#4d4dff"
                android:id="@+id/question_id"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="2dp"
                android:layout_below="@id/question_id"
                android:background="#e2e1cc"
                android:id="@+id/view_divider_id"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divider_id"
                android:layout_marginTop="10dp"
                android:id="@+id/radio_group_id">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textColorBlue"
                    android:background="@drawable/option_background"
                    android:layout_margin="8dp"
                    android:tag="0"
                    android:id="@+id/option_a_id"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textColorBlue"
                    android:background="@drawable/option_background"
                    android:layout_margin="8dp"
                    android:tag="1"
                    android:id="@+id/option_b_id"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textColorBlue"
                    android:background="@drawable/option_background"
                    android:layout_margin="8dp"
                    android:tag="2"
                    android:id="@+id/option_c_id"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textColorBlue"
                    android:background="@drawable/option_background"
                    android:layout_margin="8dp"
                    android:tag="3"
                    android:id="@+id/option_d_id"/>
            </RadioGroup>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:enabled="false"
        style="@style/RoundedCornerButtonTheme"
        android:layout_marginBottom="10dp"
        android:text="@string/answer_button_state"
        android:id="@+id/check_answer_button_id"/>

</RelativeLayout>